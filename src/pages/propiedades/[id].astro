---
import { getCollection, type CollectionEntry } from 'astro:content'
import Layout from '../../layouts/Layout.astro'
import Header from '../../components/Header.astro'
import Footer from '../../components/Footer.astro'
import ImageGallery from '../../components/ImageGallery.astro'
import ContactAgent from '../../components/ContactAgent.astro'

export async function getStaticPaths() {
    const propiedades = await getCollection('propiedades')
    return propiedades.map((propiedad) => ({
        params: { id: propiedad.slug },
        props: { propiedad },
    }))
}

type Props = {
    propiedad: CollectionEntry<'propiedades'>
}

const { propiedad } = Astro.props
const { data, render } = propiedad
const { Content } = await render()

// Formatear precio
const formatPrecio = (precio: number, moneda: string) => {
    const formatter = new Intl.NumberFormat('es-AR', {
        style: 'currency',
        currency: moneda,
        minimumFractionDigits: 0,
        maximumFractionDigits: 0,
    })
    return formatter.format(precio)
}

// Función para capitalizar
const capitalize = (str: string) => str.charAt(0).toUpperCase() + str.slice(1)

// Formatear fecha
const formatFecha = (fecha: Date) => {
    return fecha.toLocaleDateString('es-AR', {
        year: 'numeric',
        month: 'long',
        day: 'numeric',
    })
}
---

<Layout
    title={`${data.titulo} - InmoPlus`}
    description={`${data.titulo} en ${data.ubicacion.localidad}. ${formatPrecio(data.precio, data.moneda)}. ${data.caracteristicas.habitaciones} hab, ${data.caracteristicas.baños} baños, ${data.caracteristicas.superficieTotal}m².`}
>
    <Header />

    <main class="pt-20">
        <!-- Breadcrumb -->
        <div class="bg-gray-50 py-4">
            <div class="container mx-auto px-4">
                <nav class="flex" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a
                                href="/"
                                class="text-gray-700 hover:text-blue-600 transition-colors"
                            >
                                Inicio
                            </a>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg
                                    class="w-6 h-6 text-gray-400"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        fill-rule="evenodd"
                                        d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                        clip-rule="evenodd"></path>
                                </svg>
                                <span
                                    class="ml-1 text-gray-500 truncate"
                                >
                                    Propiedades
                                </span>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center">
                                <svg
                                    class="w-6 h-6 text-gray-400"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
