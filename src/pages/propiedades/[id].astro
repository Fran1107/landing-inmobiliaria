                                    data.caracteristicas.balcon && (
                                        <div class="flex items-center">
                                            <svg
                                                class="w-5 h-5 text-green-500 mr-3"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span class="text-gray-700">
                                                Balcón
                                            </span>
                                        </div>
                                    )
                                }

                                {
                                    data.caracteristicas.terraza && (
                                        <div class="flex items-center">
                                            <svg
                                                class="w-5 h-5 text-green-500 mr-3"
                                                fill="currentColor"
                                                viewBox="0 0 20 20"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                            <span class="text-gray-700">
                                                Terraza
                                            </span>
                                        </div>
                                    )
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Sidebar -->
                    <div class="lg:col-span-1">
                        <div class="sticky top-24 space-y-6">
                            <!-- Contact Agent -->
                            {
                                data.agente && (
                                    <ContactAgent
                                        agente={data.agente}
                                        propiedadId={propiedad.slug}
                                    />
                                )
                            }

                            <!-- Quick Actions
                            <div  class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
                                <h3
                                    class="text-lg font-semibold text-gray-900 mb-4"
                                >
                                    Acciones rápidas
                                </h3>
                                <div class="space-y-3">
                                    <button
                                        class="w-full flex items-center justify-center px-4 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors"
                                    >
                                        <svg
                                            class="w-5 h-5 mr-2"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
