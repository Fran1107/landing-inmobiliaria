---
interface Props {
    agente: {
        nombre: string
        telefono: string
        email: string
        foto?: string
    }
    propiedadId: string
}

const { agente, propiedadId } = Astro.props

// Formatear número de WhatsApp (remover caracteres especiales)
const whatsappNumber = agente.telefono.replace(/[^\d]/g, '')
const whatsappMessage = encodeURIComponent(
    `Hola ${agente.nombre}, estoy interesado/a en la propiedad ${propiedadId}. ¿Podrías darme más información?`
)
---

<div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">
        Contactar al agente
    </h3>

    <!-- Agente Info -->
    <div class="flex items-center mb-6">
        <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center text-white font-semibold text-lg mr-4">
            {
                agente.foto ? (
                    <img src={agente.foto} alt={agente.nombre} class="w-16 h-16 rounded-full object-cover"/>
                ) : (
                    <span>{agente.nombre.split(' ').map((n) => n[0]).join('').toUpperCase()}</span>
                )
            }
        </div>
        <div>
            <h4 class="font-semibold text-gray-900">{agente.nombre}</h4>
            <p class="text-sm text-gray-600">Agente inmobiliario</p>
        </div>
    </div>

    <!-- Contacto Actions -->
    <div class="space-y-3">
        <!-- WhatsApp -->
        <a href={`https://wa.me/${whatsappNumber}?text=${whatsappMessage}`} target="_blank" rel="noopener noreferrer"
            class="w-full flex items-center justify-center px-4 py-3 bg-green-600 hover:bg-green-700 text-white rounded-lg transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"></path>
            </svg>
            Escribir por WhatsApp
        </a>

        <!-- Phone -->
        <a href={`tel:${agente.telefono}`} class="w-full flex items-center justify-center px-4 py-3 border-2 border-blue-600 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>>
                <path stroke-linecap="round"stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            Llamar ahora
        </a>

        <!-- Email -->
        <a href={`mailto:${agente.email}?subject=Consulta sobre propiedad ${propiedadId}&body=Hola ${agente.nombre},%0D%0A%0D%0AEstoy interesado/a en la propiedad ${propiedadId} y me gustaría recibir más información.%0D%0A%0D%0AGracias.`}
            class="w-full flex items-center justify-center px-4 py-3 border-2 border-gray-300 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            Enviar email
        </a>
    </div>

    <!-- Contacto Form -->
    <div class="mt-6 pt-6 border-t border-gray-200">
        <h5 class="font-medium text-gray-900 mb-3">Enviar mensaje rápido</h5>
        <form class="space-y-3" id="contactForm">
            <div>
                <input type="text"
                    name="nombre"
                    placeholder="Tu nombre"
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
            </div>
            <div>
                <input
                    type="email"
                    name="email"
                    placeholder="Tu email"
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
            </div>
            <div>
                <input
                    type="tel"
                    name="telefono"
                    placeholder="Tu teléfono (opcional)"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm"
                />
            </div>
            <div>
                <textarea
                    name="mensaje"
                    placeholder="Tu mensaje..."
                    rows="3"
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm resize-none"
                ></textarea>
            </div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg transition-colors font-medium text-sm">
                Enviar mensaje
            </button>
        </form>
    </div>

    <!-- Contacto Info -->
    <div class="mt-4 pt-4 border-t border-gray-200 text-xs text-gray-500">
        <p class="flex items-center mb-1">
            <svg
                class="w-3 h-3 mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
            </svg>
            {agente.telefono}
        </p>
        <p class="flex items-center">
            <svg
                class="w-3 h-3 mr-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
            </svg>
            {agente.email}
        </p>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('contactForm') as HTMLFormElement | null

        form?.addEventListener('submit', (e) => {
            e.preventDefault()

            // Simulación de envío de formulario
            const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement | null

            if (!submitButton) return 

            const originalText = submitButton.textContent || 'Enviar'

            submitButton.textContent = 'Enviando...'
            submitButton.disabled = true

            setTimeout(() => {
                alert(
                    'Mensaje enviado correctamente. El agente se contactará contigo pronto.'
                )
                form.reset()
                submitButton.textContent = originalText
                submitButton.disabled = false
            }, 1500)
        })
    })
</script>

